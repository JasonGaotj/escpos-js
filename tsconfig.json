{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    // "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "./lib",
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "lib": ["es2017", "dom"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", "src/index.ts"]
}
